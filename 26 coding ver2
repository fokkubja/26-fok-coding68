import tkinter as tk
from tkinter import messagebox

def calculate_tdee():
    try:
        w = float(entry_weight.get())
        cm = float(entry_height.get())
        a = int(entry_age.get())
        s = gender.get()
        wo = workout.get()

        if s == 4:  # ‡∏ú‡∏π‡πâ‡∏ä‡∏≤‡∏¢
            bmr = (13.7 * w) + (5 * cm) - (6.8 * a) + 66
        elif s == 5:  # ‡∏ú‡∏π‡πâ‡∏´‡∏ç‡∏¥‡∏á
            bmr = (9.6 * w) + (1.8 * cm) - (4.7 * a) + 665
        else:
            messagebox.showerror("Error", "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡πÄ‡∏û‡∏®")
            return

        if wo == 1:
            tdee = bmr * 1.2
        elif wo == 2:
            tdee = bmr * 1.375
        elif wo == 3:
            tdee = bmr * 1.55
        else:
            messagebox.showerror("Error", "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Å‡∏≤‡∏¢")
            return

        result_label.config(
            text=f"üî• TDEE ‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡∏∑‡∏≠ üî•\n{tdee:.2f} kcal/‡∏ß‡∏±‡∏ô",
            fg="#FFD700"
        )

    except ValueError:
        messagebox.showerror("Error", "‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡πÅ‡∏•‡∏∞‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á")

# ---------- ‡∏´‡∏ô‡πâ‡∏≤‡∏ï‡πà‡∏≤‡∏á‡∏´‡∏•‡∏±‡∏Å ----------
root = tk.Tk()
root.title("üî• Goku TDEE Calculator üî•")
root.geometry("420x520")
root.configure(bg="#FF8C00")  # ‡∏™‡πâ‡∏°‡πÇ‡∏Å‡∏Ñ‡∏π

# ---------- ‡∏´‡∏±‡∏ß‡∏Ç‡πâ‡∏≠ ----------
title = tk.Label(
    root,
    text="üêâ GOKU TDEE CALCULATOR üêâ",
    font=("Helvetica", 18, "bold"),
    bg="#FF8C00",
    fg="#1E90FF"
)
title.pack(pady=15)

# ---------- Input ----------
frame = tk.Frame(root, bg="#FF8C00")
frame.pack()

def label_entry(text):
    lbl = tk.Label(frame, text=text, bg="#FF8C00", fg="black", font=("Helvetica", 11))
    lbl.pack()
    ent = tk.Entry(frame, font=("Helvetica", 11))
    ent.pack(pady=5)
    return ent

entry_weight = label_entry("‡∏ô‡πâ‡∏≥‡∏´‡∏ô‡∏±‡∏Å (‡∏Å‡∏Å.)")
entry_height = label_entry("‡∏™‡πà‡∏ß‡∏ô‡∏™‡∏π‡∏á (‡∏ã‡∏°.)")
entry_age = label_entry("‡∏≠‡∏≤‡∏¢‡∏∏ (‡∏õ‡∏µ)")

# ---------- ‡πÄ‡∏û‡∏® ----------
gender = tk.IntVar()
tk.Label(frame, text="‡πÄ‡∏û‡∏®", bg="#FF8C00", font=("Helvetica", 11)).pack()
tk.Radiobutton(frame, text="‡∏ú‡∏π‡πâ‡∏ä‡∏≤‡∏¢", variable=gender, value=4, bg="#FF8C00").pack()
tk.Radiobutton(frame, text="‡∏ú‡∏π‡πâ‡∏´‡∏ç‡∏¥‡∏á", variable=gender, value=5, bg="#FF8C00").pack()

# ---------- ‡∏≠‡∏≠‡∏Å‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Å‡∏≤‡∏¢ ----------
workout = tk.IntVar()
tk.Label(frame, text="‡∏£‡∏∞‡∏î‡∏±‡∏ö‡∏Å‡∏≤‡∏£‡∏≠‡∏≠‡∏Å‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Å‡∏≤‡∏¢", bg="#FF8C00", font=("Helvetica", 11)).pack(pady=5)
tk.Radiobutton(frame, text="‡πÑ‡∏°‡πà‡∏≠‡∏≠‡∏Å‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Å‡∏≤‡∏¢", variable=workout, value=1, bg="#FF8C00").pack()
tk.Radiobutton(frame, text="‡∏≠‡∏≠‡∏Å‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Å‡∏≤‡∏¢‡πÄ‡∏ö‡∏≤‡πÜ", variable=workout, value=2, bg="#FF8C00").pack()
tk.Radiobutton(frame, text="‡∏≠‡∏≠‡∏Å‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏Å‡∏≤‡∏¢‡∏à‡∏£‡∏¥‡∏á‡∏à‡∏±‡∏á", variable=workout, value=3, bg="#FF8C00").pack()

# ---------- ‡∏õ‡∏∏‡πà‡∏° ----------
btn = tk.Button(
    root,
    text="‚ö° ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡∏û‡∏•‡∏±‡∏á‡∏ã‡∏≤‡∏¢‡πà‡∏≤ ‚ö°",
    command=calculate_tdee,
    bg="#1E90FF",
    fg="white",
    font=("Helvetica", 13, "bold")
)
btn.pack(pady=15)

# ---------- ‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå ----------
result_label = tk.Label(
    root,
    text="",
    bg="#FF8C00",
    font=("Helvetica", 14, "bold")
)
result_label.pack(pady=10)

root.mainloop()
